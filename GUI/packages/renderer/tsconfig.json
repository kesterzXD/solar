{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "target": "esnext",
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": ["esnext", "dom"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@type/*": ["../types/*"],
        "@main/*": ["../main/*"],
        "@common/*": ["../common/*"],
      },
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*.ts", "../types/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
  }